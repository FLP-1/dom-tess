{
  "extends": "next/core-web-vitals",
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "@chakra-ui/react",
            "importNames": ["Select"],
            "message": "Por favor, use o componente SelectCustom ao invés do Select do Chakra UI diretamente."
          }
        ],
        "patterns": [
          {
            "group": ["@chakra-ui/react"],
            "importNames": ["Select"],
            "message": "Por favor, use o componente SelectCustom ao invés do Select do Chakra UI diretamente."
          }
        ]
      }
    ],
    "react-hooks/exhaustive-deps": "warn",
    "react/display-name": "error"
  },
  "overrides": [
    {
      "files": ["src/components/common/SelectCustom.tsx"],
      "rules": {
        "no-restricted-imports": "off"
      }
    }
  ]
}
