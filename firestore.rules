rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite acesso público durante o desenvolvimento
    match /{document=**} {
      allow read, write: if true;
    }

    // Regras específicas para a coleção users
    match /users/{userId} {
      allow create: if true;  // Permite criação de novos usuários
      allow read, write: if true;  // Permite todas as operações durante desenvolvimento
    }
    
    match /verification_codes/{codeId} {
      allow read, write: if request.auth != null;
    }
  }
} 